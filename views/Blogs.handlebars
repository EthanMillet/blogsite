<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>


  <div class="col-md-6 project-list">

    {{#each comment as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
          <h4>{{comment.title}}</h4>
      </div>
      <div class="col-md-4">
        <p>{{comment.description}}</p>
      </div>
      <p>Created by {{comment.user.name}} on {{format_date date_created}}</p>
    </div>
    {{/each}}
  </div>



    <div class="text-center">
    <h5>Add Comment:</h5>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Comment Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Description:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button id="addCommentButton" type="submit" class="btn btn-primary" data-id="{{id}}" >Add Comment</button>
      </div>
    </form>
  </div>


</div>

<script src="/js/blog.js"></script>